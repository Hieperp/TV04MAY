@model TotalPortal.Areas.Commons.ViewModels.Helpers.IVerifierDropDownViewModel

<div class="form-group">
    @*style="display: none;"*@
    @Html.LabelFor(model => model.VerifierID, new { @class = "right-panel-label" })
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.VerifierID).BindTo(Model.AspNetUserSelectList.Where(p => p.Group.Name == "Verified Group")).HtmlAttributes(new { @class = "right-panel-input" })
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.VerifierID, "", new { @class = "text-danger" })
    </div>
</div>


