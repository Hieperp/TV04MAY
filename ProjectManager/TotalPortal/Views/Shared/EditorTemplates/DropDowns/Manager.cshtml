@model TotalPortal.Areas.Commons.ViewModels.Helpers.IManagerDropDownViewModel

<div class="form-group">
    @*style="display: none;"*@
    @Html.LabelFor(model => model.ManagerID, new { @class = "right-panel-label" })
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.ManagerID).BindTo(Model.AspNetUserSelectList.Where(p => p.Group.Name == "Authorized Group")).HtmlAttributes(new { @class = "right-panel-input" })
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.ManagerID, "", new { @class = "text-danger" })
    </div>
</div>


